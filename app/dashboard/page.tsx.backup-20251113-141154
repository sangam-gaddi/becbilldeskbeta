              <span className="text-xs font-semibold bg-white/20 px-2 py-1 rounded">Total</span>
            </div>
            <p className="text-3xl font-bold">{payments.length}</p>
            <p className="text-sm opacity-80 mt-1">Total Payments</p>
          </div>

